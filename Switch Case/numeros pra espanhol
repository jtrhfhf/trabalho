<?php
$portuguesNumber = rand(1, 5); 

switch ($portuguesNumber) {
    case 1:
        $Number = "uno";
        break;
    case 2:
        $Number = "dos";
        break;
    case 3:
        $Number = "tres";
        break;
    case 4:
        $Number = "cuatro";
        break;
    case 5:
        $Number = "cinco";
        break;
}

echo "o número $portuguesNumber em espanhol é $Number.";
?>